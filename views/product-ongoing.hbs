                    <button type="button" class="btn btn-lg btn-primary" @click.prevent="reserve()" v-if="funding.CrowdFundingStatus === 0">我要预约</button>
                    <button type="button" disabled class="btn btn-lg btn-primary" v-if="funding.CrowdFundingStatus === 10 || funding.CrowdFundingStatus === 11">已结束</button>
                </div>
                <span class="my-item-success" v-if="funding.CrowdFundingStatus === 10"></span>
